{
  "name": "idom-react-app",
  "description": "A client application for IDOM implemented in React",
  "version": "0.1.0",
  "author": "Ryan Morshead",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/idom-team/idom"
  },
  "scripts": {
    "build": "snowpack && snowpack build",
    "format": "prettier --write ./src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "prettier": "^2.2.1",
    "snowpack": "2.12.1"
  },
  "dependencies": {
    "idom-client-react": "^0.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "snowpack": {
    "install": [
      "htm",
      "react",
      "react-dom",
      "idom-client-react"
    ],
    "installOptions": {
      "polyfillNode": true
    }
  }
}
